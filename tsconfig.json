{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": [
    "src",
    "cypress/**/*.ts", // Incluye los archivos de Cypress
    "cypress/**/*.d.ts",
    "cypress/support/**/*.ts",
    "cypress/e2e/**/*.feature", // Incluye los archivos .feature
    "cypress.config.ts"
  ]
}


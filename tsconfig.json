{
  "compilerOptions": {
    "esModuleInterop": true, // Habilita la interoperabilidad entre los módulos de CommonJS y los módulos de ECMAScript
    "target": "ESNext", // JavaScript compatible con las características de ECMAScript 2017
    "lib": ["dom", "ESNext"],
    "module": "ESNext", // ESNext es común en proyectos React que utilizan un bundler como Vite
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": [
    "src",
    "cypress/**/*.ts", // Incluye los archivos de Cypress
    "cypress/**/*.d.ts",
    "cypress/support/**/*.ts",
    "cypress/e2e/**/*.feature", // Incluye los archivos .feature
    "cypress.config.ts"
  ]
}
